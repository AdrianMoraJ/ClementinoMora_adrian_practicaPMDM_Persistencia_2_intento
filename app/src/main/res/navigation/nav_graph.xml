<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/fragment_all_tasks"
        android:name="com.example.clementinomora_adrian_practicapmdm_persistencia.AllTasksFragment"
        android:label="All Tasks"
        tools:layout="@layout/fragment_all_tasks" />

    <fragment
        android:id="@+id/fragment_all_modules"
        android:name="com.example.clementinomora_adrian_practicapmdm_persistencia.AllModulesFragment"
        android:label="All Modules"
        tools:layout="@layout/fragment_all_modules" />

    <fragment
        android:id="@+id/fragment_manage_tasks"
        android:name="com.example.clementinomora_adrian_practicapmdm_persistencia.ManageTasksFragment"
        android:label="Manage Tasks"
        tools:layout="@layout/fragment_manage_tasks" />

    <fragment
        android:id="@+id/fragment_manage_modules"
        android:name="com.example.clementinomora_adrian_practicapmdm_persistencia.ManageModulesFragment"
        android:label="Manage Modules"
        tools:layout="@layout/fragment_manage_modules" />

    <action
        android:id="@+id/action_to_all_tasks"
        app:destination="@id/fragment_all_tasks" />

    <action
        android:id="@+id/action_to_all_modules"
        app:destination="@id/fragment_all_modules" />

    <action
        android:id="@+id/action_to_manage_tasks"
        app:destination="@id/fragment_manage_tasks" />

    <action
        android:id="@+id/action_to_manage_modules"
        app:destination="@id/fragment_manage_modules" />


